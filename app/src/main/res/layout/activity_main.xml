<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2347590"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#c2341c"
        android:text="MAIN MENU"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_2"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        android:src="@drawable/ic_add_shopping_cart_black_24dp"
        android:layout_margin="15dp"/>
    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_description_black_24dp"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_1"

        />
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER NOW"
            app:layout_constraintStart_toStartOf="@id/iv_1"
            app:layout_constraintEnd_toEndOf="@id/iv_1"
            app:layout_constraintTop_toBottomOf="@id/iv_1"
            android:textSize="25sp"
            android:background="#c2341c"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_2"
        app:layout_constraintEnd_toEndOf="@id/iv_2"
        app:layout_constraintTop_toBottomOf="@id/iv_2"
        android:text="PRESCRIPTIONS"
        android:textSize="25sp"
        android:background="#c2341c"/>
<ImageView
    android:id="@+id/iv_3"
    android:layout_width="120dp"
    android:layout_height="120dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_2"
    app:layout_constraintEnd_toStartOf="@+id/iv_4"
    android:src="@drawable/ic_account_circle_black_24dp"/>
    <ImageView
        android:id="@+id/iv_4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toEndof="@id/iv_3"
        app:layout_constraintStart_toStartOf="@id/iv_2"
        app:layout_constraintTop_toBottomOf="@id/tv_3"
        android:src="@drawable/ic_chat_black_24dp"/>
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="#c2341c"
        app:layout_constraintStart_toStartOf="@id/iv_3"
        app:layout_constraintEnd_toEndOf="@id/iv_3"
        app:layout_constraintTop_toBottomOf="@id/iv_3"
        android:text="PROFILE"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="#c2341c"
            app:layout_constraintStart_toStartOf="@id/iv_4"
            app:layout_constraintEnd_toEndOf="@id/iv_4"
            app:layout_constraintTop_toBottomOf="@id/iv_4"
            app:layout_constraintTop_toTopOf="@+id/tv_4"
            android:text="CHATS"

            />
    <ImageView
        android:id="@+id/iv_5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_4"
        android:src="@drawable/ic_phone_black_24dp"
        android:layout_margin="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_5"
        app:layout_constraintEnd_toEndOf="@id/iv_5"
        app:layout_constraintTop_toBottomOf="@id/iv_5"
        android:text="CONTACT WITH US"
        android:textSize="25sp"
        android:background="#c2341c"/>











</androidx.constraintlayout.widget.ConstraintLayout>